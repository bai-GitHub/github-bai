extends ../layout/collLayout

block content
	.rtitle
			h1 收藏夹
			a.mt(href="/user/myCenter")
				i
	if goods.length > 0
		.list(style="margin-top:49px")
			ul
				each i in goods
					li(gid='#{i.gid}')
						p.banner 
							a(href="/goods/#{i.gid}/#{user.content.smid}/#{i.suid}")
								img(src="#{i.detailed_description}", alt="", width='150', height='150')
						div.lese
							a(href="/goods/#{i.gid}/#{user.content.smid}/#{i.suid}")
								p.txt #{i.name_commodity}
							i.lecon
								img(onclick="removeColl(this)",src="/img/orders/quxiaoshoucang.png", alt="", width='18', height='18')
								input(name="user[faid]",value="#{i.faid}",type="hidden",class="faid")
							p.sec 规格:#{i.packing_specification}
							.action
								p.price ￥#{i.goodsSellPrice}
								p.click
									span.reduce 
									input(type="text", value='0', readonly, maxlength="#{i.goodsOnStockNum}")
									span.add 
							p.supname
								a(href="/supplierlist/#{i.suid}") #{i.supplierName}
		script(src= '/js/price.js', type= 'text/javascript')
		.footer
			p.num 数量：
				i 0
			p.allprice 
				span 价格：
				span.last ￥0.00
			p.shop
				a.addshop(href="javascript:void(0);") 加入进货单
				span 3
	else
		.nothing
			p
				img(src='/img/orders/kongshoucangjia.png')
			p 您还没有收藏商品
			a(href="/") 去逛逛