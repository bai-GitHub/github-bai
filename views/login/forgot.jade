extends ../layout/layout


block content
	.rtitle
		h1(data-smid='#{smid}') 找回密码
		a.mt(href="#{url}")
			i
		a(href="/user")
	.forgot
		.title
			h3 1、身份验证
		form(action='/forgotFinal', method='post')
			p.forname
				span 绑定手机号
				input(type='text', placeholder='请输入绑定手机号', name='user[mobile]',id="mobile")
			p.forverity
				span 验证码
				input(type='text', placeholder='六位验证码', name='user[code]',id="code")
				input(type='button',value="获取验证码",id="forgotYan")
			.fsub
				input.btn(type='submit', value='下一步',id='next',onclick="return forgotNext()")
